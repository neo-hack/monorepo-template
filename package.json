{
  "name": "@aiou/monorepo-template",
  "version": "1.0.0",
  "description": "monorepo template",
  "keywords": [
    "monorepo",
    "template",
    "neo"
  ],
  "license": "MIT",
  "homepage": "https://github.com/neo-hack/monorepo-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neo-hack/monorepo-template.git"
  },
  "bugs": {
    "url": "https://github.com/neo-hack/monorepo-template/issues"
  },
  "author": {
    "name": "jiangweixian"
  },
  "scripts": {
    "lint": "eslint '**/*.{js,ts,tsx,json}'",
    "lint:fix": "eslint . --fix",
    "build": "pnpm build -r",
    "ci:version": "pnpm changeset version",
    "ci:publish": "pnpm run build && pnpm changeset publish",
    "ci:snapshot": "pnpm changeset version --snapshot beta",
    "ci:prerelease": "pnpm run build && pnpm changeset publish --tag beta",
    "prepare": "husky install",
    "test": "pnpm jest -r"
  },
  "lint-staged": {
    "**/**/*.{js,ts,tsx,vue,json}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@aiou/eslint-config": "^0.5.1",
    "@changesets/cli": "latest",
    "cz-emoji": "^1.3.1",
    "eslint": "^8.22.0",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-emoji"
    }
  }
}
